<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<ul id = "letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" placeholder="Your word">
  <input type="submit">
</form>
